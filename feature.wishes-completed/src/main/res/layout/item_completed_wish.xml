<?xml version="1.0" encoding="utf-8"?><!-- TODO весь файл - дубляж -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/item_completed_wish"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<View
		android:id="@+id/marker"
		android:layout_width="8dp"
		android:layout_height="0dp"
		android:background="@color/colorMint"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/wish_name"
		style="@style/Material.Text.Title"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginStart="16dp"
		android:layout_marginTop="24dp"
		android:layout_weight="1"
		android:paddingStart="16dp"
		android:paddingEnd="8dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:text="Крутая запчасть" />

	<TextView
		android:id="@+id/wish_info"
		style="@style/Material.Text.Description"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginStart="16dp"
		android:layout_marginTop="8dp"
		android:layout_weight="1"
		android:paddingStart="16dp"
		android:paddingEnd="8dp"
		android:text="Описание этой крутой запчасти растянулось аж на несколько строчек, Описание этой крутой запчасти растянулось аж на несколько строчек, Описание этой крутой запчасти растянулось аж на несколько строчек"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/wish_name" />

	<TextView
		android:id="@+id/wish_cost"
		style="@style/Material.Text.Cost"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginTop="8dp"
		android:layout_marginEnd="52dp"
		android:layout_marginBottom="16dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/wish_info"
		tools:text="2000р" />

	<TextView
		android:id="@+id/wish_cost_in_noodles"
		style="@style/Material.Text.Noodles"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="8dp"
		app:layout_constraintBottom_toBottomOf="@+id/wish_cost"
		app:layout_constraintEnd_toStartOf="@+id/wish_cost"
		app:layout_constraintTop_toTopOf="@+id/wish_cost"
		tools:text="~100 пачек лапши" />

</androidx.constraintlayout.widget.ConstraintLayout>